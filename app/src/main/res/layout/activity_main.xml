<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diogo.calcbeer.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe os preços :)"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/garrafa300ml" />

        <EditText
            android:id="@+id/precoGarrafa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:inputType="numberDecimal"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/longneck" />

        <EditText
            android:id="@+id/precoLongneck"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:hint="Longneck 330ml"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/lata" />

        <EditText
            android:id="@+id/precoLata"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:hint="Lata 350ml"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/latao" />

        <EditText
            android:id="@+id/precoLatao"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:hint="Latão 473ml"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/calcular"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="calcular"
        android:layout_gravity="center"
        />

</LinearLayout>
